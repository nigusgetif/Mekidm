<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Account Activation
        </title>
        <link rel="stylesheet" href="/nav/adminNav.css">
        <link rel="stylesheet" href="/assets/css/admin/AccountActivation.css">
        
    </head>
    <body>

        <%- include('../partials/adminnav') %>
        <div class="body">
        <br>
      <h1>Account Activation</h1>
      <div class="search">
        <h2>Search for the Account:</h2>
      <br>
        
        
    

        <form action="/admin/account"   method="POST">
            <label for="occupation">Occupation:</label>
            <select name="occupation" id="cars">
                <option value="Student">Student</option>
                <option value="Instructor">Instructor</option>
                <option value="Administrator">Administrator</option>
            </select><br><br>
            <label for="">Id Number:</label>
            <input type="textfield" name="id" ><br><br>
            <input type="Submit" name="Submit">
        </form>
    </div>
    <div class="viewSearch">
        <%if (result) { %>
        <h2>Profile:</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>ID Number</th>
                <th>Status</th>
                <th>Admin Active</th>
                <th>Admin Deactivate</th>
               
            </tr>
            <tr>
                <td>    <%=  result[0].FullName     %>     </td>
                <td>    <%=  result[0].StudentID    %>     </td>
                <td>    <%=  result[0].IDStatus    %>     </td>
                <td>  <a href="account/activate/<%=  result[0].FullName %>"> active</a> </td>
                <td>  <a href="account/deactivate/<%= result[0].FullName %>"> deactive</a> </td>

            </tr>
        </table><br><br>
        <% } %>
    </div>

    <script>

        var icon =document.getElementById("icon");
        icon.onclick= function(){
          document.body.classList.toggle("dark-theme");
          if (document.body.classList.contains("dark-theme")){
            meklog.src="/assets/images/logo3.png";
            landinglogo.src="/assets/images/logo4.png";
  
          
          } else{
            meklog.src="/assets/images/logo.png";
            landinglogo.src="/assets/images/logo2.png";
            
          }
        
        }
        
          </script>
    </body>
    <footer class="footer">
      
        <div class="container">
          
          <div class="footer_bottom"><small class="end">Copyright Â© 2021 by Mekdim. All rights reserved.</small> </div>
          
      </div>
        
      
      </footer>
</html>