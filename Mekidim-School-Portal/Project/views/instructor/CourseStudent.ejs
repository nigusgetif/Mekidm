<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Number of Students Display 1</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="../../assets/css/instructor/Inbox.css">
    </head>

    <body>
        <%- include('../partials/instructornav') %>

        <div class="dark">
            <br><br>
            <h2><pre>Number of Students Display</pre></h2><br>
            <%if (isGet) { %>
                <section class="section">
                    <div id="div_b">
                        <form action="/courseStudent" method="post">
                            <label for="ccourse">Courses</label><br>
                            <input type="text" id="ccourse" name="ccourse" placeholder="e.g. EMF" required><br><br>
                            <input type="submit" value="Submit">
                        </form>
                    </div>
                </section>
            <% } else {%>
                <% if(msg.length <= 0) {%>
                    <p>NO STUDENTS ARE TAKING THIS COURSE.</p>
                <% } else {%>
                    <% msg.forEach(x => { %>
                      <p> <%= x.StudentInCourse %></p>
                    <% }) %>
                <% } %>
            <% } %>
        </div>

        <footer class="footer">
            <div class="container">
                <div class="footer_bottom">
                    <small class="end">
                        Copyright Â© 2021 by Mekdim. All rights reserved.
                    </small>
                </div>
            </div>
        </footer>

        <script>
            var icon =document.getElementById("icon");
            icon.onclick= function(){
                document.body.classList.toggle("dark-theme");
                if (document.body.classList.contains("dark-theme")){
                    meklog.src="../../assets/images/logo3.png";
                    img.src="../../assets/images/teacher1.png";
                } else meklog.src="../../assets/images/logo.png";
            }
        </script>

    </body>
</html>
