<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Student</title>
    
    <link rel="stylesheet" href="/assets/css/student/clearance_request.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>


  </head>
  <body>
    
    <%- include('../partials/studentnav') %>

    
  <section class="section">
      <h1><pre>       Clearance Request</pre></h1><br>						<!--main function of page-->
      <p><pre>             Fill in this form to request clearance:</pre></p><br><br>
      <div id="div_a">
      <form action="/clearance"  method = "post">
        <label for="fname">First Name:</label>		                             	<!--first name information-->
           <input type="text" id="fname" name="fname" value="" required ><br><br>
        <label for="date">Date of Birth:</label>		                              	<!--date of birth information-->
           <input type="text" id="date" name="date" placeholder="dd/mm/yyyy" required><br><br>
        <label for="sex">Sex:</label>			        	                              <!--Sex information-->
           <input type="text" id="sex" name="sex" value="" required><br><br><br>
        <textarea rows = "15" cols = "45" name = "rfc">
                Reason for Clearance
             </textarea><br>
      </div>
      <div id="div_b">
        <label for="mname">Middle Name:</label>		                   	<!--middle name information-->	
           <input type="text" id="mname" name="mname" value="" required><br><br>
        <label for="id">ID:</label>				                   	<!--ID information-->
           <input type="text" id="id" name="id" value="" required><br><br><br>
        <label for="ye">Current Year:</label>						<!--dropdown to choose year -->
             <select name="Year " id="Year" required>
                 <option value="y1">Year 1</option>
                 <option value="y2">Year 2</option>
                 <option value="y3">Year 3</option>
                 <option value="y4">Year 4</option>
                 <option value="y4">Year 5</option>
             </select><br><br><br><br>
        
      </div>
      <div id="div_c">
        <label for="lname">Last Name:</label>			<!--last name information-->
            <input type="text" id="lname" name="lname" value="" required><br><br><br><br>
            <label for="myfile">Upload scanned clearance document:</label>		<!--Upload Clearance doc-->
             <input type="file" id="myfile" name="myfile" required /><br><br><br><br><br><br><br><br><br>
        <input type="submit" value="Submit">				<!--submit button-->
      </div>           
      </form>
    </div>
  </section>

