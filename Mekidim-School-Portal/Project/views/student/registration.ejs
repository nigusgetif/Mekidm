<!DOCTYPE html>
<html>

    <head>
        <title>Course Registration</title>
        <link rel="stylesheet" href="/assets/css/student/Registration.css">
        <!--This link the the html with css file-->
        <link rel="stylesheet" href="/assets/css/student/HeaderOFCourse.css">
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>

    </head>

    <body>
        <%- include('../partials/studentnav') %>

        <div class="content">
            <!--The main content of the page-->
            <h2>Welcome To Course Registration </h2>
            <p>Please select the courses for registration</p>
            <form action="/registration" method="post">
                <div class="table_decorator">
                    <table id="Table1">
                        <tr>
                            <th> &nbsp; </th>
                            <th>Course Title</th>
                            <!--The header row of the table-->
                            <th>ECTS</th>
                            <th>Credit Hours</th>
                            <th>Module Name</th>
                        </tr>
                        <%if (msg != null && msg.length !== 0) {%>
                            <% msg.forEach(cmsg => {%>
                                <tr>
                                    <td><input type="checkbox" name="<%= cmsg.NAME%>"/></td>
                                    <td><%= cmsg.NAME%></td>
                                    <td><%= cmsg.ECTS%></td>
                                    <td><%= cmsg.CreditHour%></td>
                                    <td><%= cmsg.ModuleName%></td>
                                </tr>
                            <%})%>
                        </table>
                        <%} else {%>
                        </table>
                            <p>No course available!</p>
                        <% } %>
                </div>
                <br>
                <input type="submit" value="Submit">
                <br><br><br>
            </form>

            <!--The Submit button-->
        </div>

        <div class="footer">
            <!--The footer of the the page-->
            <div class="container">
                <div class="footer_bottom">
                    <small class="end">
                        Copyright Â© 2021 by Mekdim. All rights reserved.
                    </small>
                </div>
            </div>
        </div>
        <script>
            var icon = document.getElementById("icon");
            icon.onclick = function () {
                document.body.classList.toggle("dark-theme");
                if (document.body.classList.contains("dark-theme")) {
                    icon.src = "../../assets/images/light2.png";
                    meklog.src = "../../assets/images/logo3.png";

                } else {
                    icon.src = "../../assets/images/dark2.png";
                    meklog.src = "../../assets/images/logo.png";

                }

            }
        </script>
    </body>
</html>