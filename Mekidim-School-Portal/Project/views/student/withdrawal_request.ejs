             <input type="text" id="sex" name="sex" value="" required><br><br>
         <label for="dep">Department:</label>	                       	<!--department information-->
             <input type="text" id="dep" name="dep" value="" required><br><br>
         <textarea rows = "13" cols = "35" name = "rfw">                     
             Reason for Withdrawal
         </textarea><br>
         <% if(msg) { %>
          <p>withdrawal request not successfull!!! please try again</p>
      <% } %>
  
      <button type="submit">submit</button> 					<!--submit and cancel buttons-->
      <button type="cancel">cancel</button> 								<!--submit button-->
     </form>
